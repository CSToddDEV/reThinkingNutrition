<a href="/">
<span id="menu_span">
<p id='menu_logo'><img src='../images/logo.webp'></p>
</span>
</a>
<p><br><br><br><br><br></p>
<div class="response">
{{!-- Create a table --}}
<table id="view-all-clients">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
        {{#each response.[0]}}
        <th>
        {{@key}}
        </th>
        {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, phone, email, address, city in order --}}
        {{#each response}}
        <tr>
            <td>{{this.client_id}}</td>
            <td>{{fname}}</td>
            <td>{{this.lname}}</td>
            <td>{{this.phone}}</td>
            <td>{{this.email}}</td>
            <td>{{#if this.city }}
                {{this.city}}
                 {{else}}                
                {{/if}}</td>
            <td>{{#if this.address }}
                {{this.address}}
                 {{else}}                
                {{/if}}</td>
            <td><button><a href="/deleteClientFromTable/{{this.client_id}}">Delete</a></button></td>
            <td><a class='update' href="/updateClientFromTable/{{this.client_id}}">Update</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>
